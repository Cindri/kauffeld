function makeYesNo($value, $onclick = '') {
    $return = '';
    if (empty($value)) {
        $return = '<span class="glyphicon glyphicon-remove" style="color:red; cursor:pointer;"';
    } else {
        $return = '<span class="glyphicon glyphicon-ok" style="color:green; cursor:pointer;" onclick="' . $onclick . '"';
    }
    $return .= '></span>';
    return $return;
}

