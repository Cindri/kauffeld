function checked($val)
{
    return empty($val) ? "" : "checked";
}

function makeCheckbox($name, $value, $onclick = '', $addAttr = '') {
    $checked = empty(intval($value)) ? '' : ' checked';
    $str = '<input type="checkbox" value="1" name="' . $name . '"' . $checked . ' onclick="' . $onclick . '" ' . $addAttr . '/>';
    return $str;
}

